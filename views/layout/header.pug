body 
    nav.navbar.navbar-expand-lg.navbar-light(style="background-color: #48C9B0;")
                a.navbar-brand(href='#') Authentication 
                button.navbar-toggler(type='button' data-toggle='collapse' data-target='#myNav')
                    span.navbar-toggler-icon
                #myNav.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        li.nav-item.active
                            a.nav-link(href='../../../')
                                | Home 
                                span.sr-only (current)    
                        if !id                                                                     
                            li.nav-item
                               a.nav-link(href='../../../signup') Sign Up
                            li.nav-item
                               a.nav-link(href='../../../signin') Sign In    
                        if id        
                            li.nav-item.dropdown
                               a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown')
                                | Your Account
                               .dropdown-menu(style="background-color: #48C9B0;")
                                a.dropdown-item(href='../../editprofile') Edit Profile
                                form(method="post" action="../../api/users/"+id)
                                    button.btn.btn-primary.dropdown-item(type='submit') Logout
                                .dropdown-divider     
                                form(method="post" action="../../api/users/deleteaccount/"+id onsubmit="return isSure();")
                                    button.btn.btn-primary.dropdown-item.bg-danger.text-light(type='submit') Delete Account Permanently
                
